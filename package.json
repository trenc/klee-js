{
  "name": "klee.js",
  "version": "0.1.0-rc1",
  "main": "src/klee.js",
  "private": true,
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -fR dist && mkdir dist",
    "bundle:min": "npx uglifyjs dist/klee.js -m -c -o dist/klee.min.js",
    "bundle:js": "rollup src/klee.js --file dist/klee.js --format esm",
    "bundle": "npm run bundle:js && npm run bundle:min",
    "watch": "onchange 'src' -- npm run bundle:js",
    "serve": "browser-sync start -s -f 'example/*.html, dist/klee.js' --startPath 'example/'",
    "build": "npm run clean && npm run bundle",
    "start": "npm run clean && npm run bundle:js && npm run watch & npm run serve",
    "test:unit": "browser-sync start -s -f 'test' --startPath 'test/'",
    "test:lint": "eslint src/*.js src/modules/*.js",
    "test": "npm run test:lint & npm run test:unit"
  },
  "author": "Tommy Schmucker",
  "license": "AGPL",
  "description": "A data driven generator and wrapper for three.js",
  "eslintConfig": {
    "env": {
      "mocha": true,
      "browser": true,
      "es2021": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "no-tabs": [
        "error",
        {
          "allowIndentationTabs": true
        }
      ],
      "padded-blocks": [
        "error",
        "always"
      ]
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^8.3.1",
    "onchange": "^7.1.0",
    "rollup": "^2.40.0",
    "uglify-es": "^3.3.9"
  }
}
